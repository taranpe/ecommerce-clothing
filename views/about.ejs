    .about-hero { background: linear-gradient(135deg, #f84a06 0%, #ff9a00 100%); color: #fff; text-align: center; padding: 6rem 1rem; }
    .about-hero h1 { font-size: 3rem; font-weight: 700; margin-bottom: 1rem; }
    .about-hero p { font-size: 1.25rem; }

    /* About Section */
    .about-section { padding: 4rem 0; }
    .about-image { width: 100%; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); }
    .about-section h2 { color: #f84a06; font-weight: 600; margin-bottom: 1rem; }
    .about-section p { line-height: 1.6; }

    /* Mission */
    .mission h2 { color: #333; font-weight: 600; margin-bottom: 0.5rem; }
    .mission p { font-size: 1.1rem; }

    /* Team Section */
    .team-section { padding: 4rem 0; background-color: #fff; }
    .team-section h2 { color: #f84a06; font-weight: 600; margin-bottom: 0.25rem; }
    .team-section p.lead { color: #666; margin-bottom: 2rem; }
